@{
    Layout = null;
    List<TroyLeeMVCEF.Models.ArticleViewModel> articles = ViewBag.Articles;
}
<div class="widget-container widget_recent_entries">
            <h3 class="widget-title">Bài gần đây</h3>
    <ul>
        @if (articles.Count > 0)
        {
            foreach (var article in articles)
            {
                <li class="even">
                    <a class="post-title" href="@Url.Action("DetailPage", "Home", new { article.ArticleID })">@article.Title</a>	 
                </li>
            }
        }
    </ul>
</div>