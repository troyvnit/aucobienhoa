@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutFO.cshtml";
    List<TroyLeeMVCEF.Models.ArticleViewModel> articles = ViewBag.Articles;
}
<div class="container" style="margin-top: -51px;">
    <!-- sw showcase -->
    <link href="/css/aw-showcase.css" media="screen" rel="stylesheet" type="text/css">
    <script type="text/javascript" language="JavaScript" src="/js/jquery.aw-showcase.min.js"></script>
    <script type="text/javascript" language="JavaScript" src="/js/jquery.cycle.all.js"></script>
    <link href="/css/modern.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#showcase").awShowcase({
                content_width: 960,
                content_height: 444,
                fit_to_parent: false,
                auto: true,
                interval: 3000,
                continuous: true,
                loading: true,
                tooltip_width: 200,
                tooltip_icon_width: 32,
                tooltip_icon_height: 32,
                tooltip_offsetx: 18,
                tooltip_offsety: 0,
                arrows: false,
                buttons: false,
                btn_numbers: false,
                keybord_keys: true,
                mousetrace: false,
                pauseonover: true,
                stoponclick: true,
                transition: 'fade',
                transition_delay: 1000,
                transition_speed: 800,
                show_caption: 'onhover',
                thumbnails: true,
                thumbnails_position: 'inside-last',
                thumbnails_direction: 'vertical',
                thumbnails_slidex: 0,
                dynamic_height: false,
                speed_change: true,
                viewline: false
            });
            $("#slide").cycle({
                //Các tùy chọn của jQuery cycle
                fx: 'fade', //Hiệu ứng
                speed: 1000, //Tốc độ diễn ra hiệu ứng 1/1000s
                timeout: 10000, //Thời gian thay đổi giữa các trong 3s
                pager: '#slide-nav' //Tạo phân trang
            });
        });
    </script>
    <!-- header image/slider -->
    <div class="header_bot header_slider">
        <div class="container">
            <!-- showcase slider -->
            <div id="showcase" class="showcase">
                <!-- Each child div in #showcase represents a slide -->
                <div class="showcase-slide">
                    <!-- Put the slide content in a div with the class .showcase-content. -->
                    <div class="showcase-content">
                        <img src="/images/dichvusinh2.jpg" alt="01" />
                    </div>
                </div>
                <!-- Each child div in #showcase represents a slide -->
                <div class="showcase-slide">
                    <!-- Put the slide content in a div with the class .showcase-content. -->
                    <div class="showcase-content">
                        <img src="/images/khamvadieutri2.jpg" alt="01" />
                    </div>
                </div>
                <!-- Each child div in #showcase represents a slide -->
                <div class="showcase-slide">
                    <!-- Put the slide content in a div with the class .showcase-content. -->
                    <div class="showcase-content">
                        <img src="/images/sieuamxetnghiem2.jpg" alt="01" />
                    </div>
                </div>
                <!-- Each child div in #showcase represents a slide -->
                <div class="showcase-slide">
                    <!-- Put the slide content in a div with the class .showcase-content. -->
                    <div class="showcase-content">
                        <img src="/images/dichvukhac2.jpg" alt="01" />
                    </div>
                </div>
            </div>
        </div>
        <!--/ showcase slider -->
    </div>
</div>
<!--/ header image/slider -->
<div class="middle">
    <div class="container_12">
        <div class="content">
            <div class="entry">
                <div class="metrouicss">
                    <div class="grid">
                        <div class="row">
                            <div class="metrouicss span3" style="background-color: #00A300; margin: 0 10px 5px 0;
