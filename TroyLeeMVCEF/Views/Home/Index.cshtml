                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col col_1_3 " style="height: 360px; margin-left: 0">
                    <div class="substrate">
                        <div id="slide-nav">
                        </div>
                        <h2>
                            TIN TỨC & SỰ KIỆN</h2>
                        <div id="slide">
                            @{ var news = articles.Where(a => a.ArticleCategoryIDs.Contains(Guid.Parse("11111111-1111-1111-1111-111111111101"))).ToList(); }
                            @for (int i = 0; i * 4 < news.Count && i * 4 < 12; i++)
                            {
                                <div>
                                    @foreach (var article in news.Skip(i * 4).Take(4))
                                    {
                                        var str = article.Title.Split('#');
                                        var itemname = str.Length > 1 ? str[1] : article.Title;
                                        var job = str.Length > 1 ? str[0] : "";
                                        <div style="max-height: 100px">
                                            <div class="time-period-left-blue">
                                                <img src="@article.ImageUrl" style="width: 50px; max-height: 70px"/></div>
                                            <div class="info-period">
                                                <a href="@Url.Action("DetailPage", "Home", new { article.ArticleID })">
                                                    <h3>
                                                        @itemname</h3>
                                                </a>
                                                <h4>@job</h4>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        @*
                                    <div>
                                        <ul>
                                            @foreach (var article in articles.Where(a => a.ArticleCategoryIDs.Contains(Guid.Parse("11111111-1111-1111-1111-111111111101"))).Skip(5).Take(5))
                                            {
